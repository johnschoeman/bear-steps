{
  "name": "bear-steps",
  "version": "1.0.0",
  "description": "Bear Steps website - promoting safe airsteps practice",
  "scripts": {
    "css:build": "npx tailwindcss -i ./css/input.css -o ./static/css/generated.css --minify",
    "css:watch": "npx tailwindcss -i ./css/input.css -o ./static/css/generated.css --watch",
    "build": "npm run css:build && zola build",
    "dev": "npm run css:watch & zola serve"
  },
  "keywords": [
    "aerials",
    "airsteps",
    "dance",
    "safety"
  ],
  "author": "Bear Steps",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.0",
    "tailwindcss": "^4.1.18"
  }
}